/**index.wxss**/
@import "/pages/footer/footer.wxss";

.header {
  display: flex;
  align-items: center;
  overflow:hidden;
  margin: 0 auto;
}

.search {
  display: flex;
  align-items: center;
  align-items: center;
  overflow: hidden;
  margin: 0 auto;
}

.select_label {
  overflow: hidden;
  display: grid;
  grid-template-columns: 1fr 1fr 1fr 1fr;
  grid-template-rows: 1fr 1fr;
  column-gap: 1.8rem;
  margin: 0 auto;
  justify-content: center;
  align-content: center;
}

.hot_places {
  background-color: darkcyan;
  position: relative;
  display: grid;
}

.weather {
  margin-left: 2%;
  /* opacity: 0.5; */
}

.tips {
  margin-left: 7%;
  font-size: 0.8em;
}

/*
对Vant组件样式修改
*/

van-search {
  width: inherit;
}

.van-search__content, .van-search__content--round {
  height: 3.5rem;
  vertical-align: middle;
}

.van-search__field, .field-class {
  display: flex;
  align-items: center;
}

.label_img {
  display: flex;
  align-items: center;
  background-color: coral;
  border-radius: 30%;
}

.label_img_1, .label_img_2, .label_img_3, .label_img_4 {
  width: 2rem;
  height: 2rem;
  margin: 0 auto;
}

.label_text {
  text-align: center;
}

.card {
  height: 14rem;
  background-color: azure;
  margin: 0 auto;
  margin-top: 1rem;
  border-radius: 0.8rem;
  overflow: hidden;
}

.card_image {
  overflow: hidden;
  margin: 0 auto;
}