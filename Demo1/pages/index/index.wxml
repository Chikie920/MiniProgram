<!--index.wxml-->
<import src="/pages/footer/footer.wxml"/>

<view class="bar" style="height: {{naviHeight}}px;"></view>
<!-- 透明状态栏 -->

<view class="header" style="height: {{screenHeight*0.1}}px; width: {{screenWidth*0.9}}px;">
  <van-image class="weather" height = "{{screenHeight*0.1*0.6}}px" width = "{{screenHeight*0.1*0.6}}px" src="/sources/dayu.png"></van-image>
  <text class="tips">今日有大雨，记得带伞哦</text>
</view>
<!-- 顶部天气相关 -->

<view class="search" style="height: {{screenHeight*0.15}}px; width: {{screenWidth*0.98}}px;">
    <van-search value="{{ value }}" placeholder="请输入搜索关键词" shape="round"/>
</view>
<!-- 搜索 -->

<view class="select_label" style="height: {{screenHeight*0.18}}px; width: {{screenWidth*0.9}}px;">
  <view class="label_img">
    <image class="label_img_1" src="/sources/jingdian.png"></image>
  </view>
  <view class="label_img">
    <image class="label_img_2" src="/sources/lvyouxianlu.png"></image>
  </view>
  <view class="label_img">
    <image class="label_img_3" src="/sources/quanjingtu.png"></image>
  </view>
  <view class="label_img">
    <image class="label_img_4" src="/sources/ditu.png"></image>
  </view>
  <view class="label_text">景点</view>
  <view class="label_text">路线</view>
  <view class="label_text">全景</view>
  <view class="label_text">地图</view>
</view>
<!-- 功能模块 -->

<view class="hot_places" style="min-height: {{screenHeight*0.62}}px;">
  <view class="card" style="width: {{screenWidth*0.9}}px;">
    <view class="card_image" style="width: {{screenWidth*0.8*0.96}}px;">
      <image src="/sources/example1.jpg"></image>
    </view>
    <view class="card_text"></view>
  </view>
  <view class="card" style="width: {{screenWidth*0.9}}px;">
