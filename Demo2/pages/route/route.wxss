/* pages/route/route.wxss */
@import "/pages/map/map.wxss";

page {
  display: flex;
  flex-flow: column nowrap;
  height: 100vh;
  overflow: hidden;
}

.back-icon-container {
  left: 0px;
}

.wrap {
  flex: 1; 
  display: flex;
}

.map-wrap {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  min-height: 30%;
}

.map-wrap map {
  width: 100%;
  height: 100%;
}

.drawer {
  width: 100%;
  height: 400px;
  max-height: 50%;
  z-index: 1;
  background-color: #ffffff;
  position: absolute;
  border-radius: 1.5rem 1.5rem 0rem 0rem;
  left: 0px;
  bottom: 0px;
  display: flex;
  flex-flow: column nowrap;
}

.drawer-header {
  width: 90%;
  margin: 0 auto;
  height: 30px;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-shrink: inherit;
  background-color: #fff;
}

.tag {
  width: 2.5rem;
  height: 0.35rem;
  background-color: #ccc;
  border-radius: 6rpx;
  margin-top: 1rem;
}

.input-container {
  width: 100vw;
  min-height: 40vh;
  background-color: pink;
  margin-top: 1rem;
  white-space: nowrap;
}