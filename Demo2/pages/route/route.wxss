/* pages/route/route.wxss */
@import "/pages/map/map.wxss";

page {
  display: flex;
  flex-flow: column nowrap;
  height: 100vh;
  overflow: hidden;
}

.back-icon-container {
  left: 0px;
}

.wrap {
  flex: 1; 
  display: flex;
}

.map-wrap {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  min-height: 30%;
}

.map-wrap map {
  width: 100%;
  height: 100%;
}

.drawer {
  width: 100%;
  height: 400px;
  max-height: 50%;
  z-index: 1;
  background-color: #ffffff;
  position: absolute;
  border-radius: 1.5rem 1.5rem 0rem 0rem;
  left: 0px;
  bottom: 0px;
  display: flex;
  flex-flow: column nowrap;
}

.drawer-header {
  width: 90%;
  margin: 0 auto;
  height: 30px;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-shrink: inherit;
  background-color: #fff;
}

.tag {
  width: 2.5rem;
  height: 0.35rem;
  background-color: #ccc;
  border-radius: 6rpx;
  margin-top: 1rem;
}

.input-container {
  width: 100vw;
  min-height: 40vh;
  /* background-color: pink; */
  margin-top: 1rem;
  white-space: nowrap;
}

van-cell {
  display: block;
  margin-top: 0.5rem !important;
}

.input-style {
  width: 90%;
  margin: 0 auto;
}

.input-hidden {
  display: none;
}

.label-text {
  width: 90vw;
  margin: 0 auto;
  margin-top: 1.5rem;
  font-weight: 600;
}

.select-labels {
  width: 90vw;
  /* background-color: pink; */
  margin: 0 auto;
  margin-top: 0.5rem;
  display: flex;
  white-space: nowrap;
}

.labels-container {
  margin: 0 auto;
  display: flex;
}

.label-style {
  width: 3.5rem;
  height: 3.5rem;
  /* background-color: powderblue; */
  display: inline-flex;
  align-items: center;
  border-radius: 1rem;
}

.label-margin {
  margin-left: 3.5rem;
}

.label-img {
  width: 2rem;
  height: 2rem;
  margin: 0 auto;
}

.commit {
  width: 90vw;
  margin: 0 auto;
  margin-top: 2rem;
}

.placeholder {
  height: 3rem;
}