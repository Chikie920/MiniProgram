/**index.wxss**/
@import "/pages/footer/footer.wxss";

.header {
  position: relative;
  /* background-color: burlywood; */
  margin: 0 auto;
} 

.weather-and-lang {
  /* background-color: darkolivegreen; */
  display: flex;
  align-items: center;
}

.weather-container {
  width: inherit;
  display: flex;
  align-items: center;
}

.weather {
  float: left;
  width: 4rem;
  height: 4rem;
  position: absolute;
  /* opacity: 0.5; */
  /* background-color: brown; */
}

.lang-container {
  margin: 0 auto;
  display: flex;
  align-items: center;
  position: relative;
}

.lang-img {
  width: 1rem;
  height: 1rem;
}

.lang-text {
  margin-left: 0.5rem;
  font-size: 0.8rem;
}

.lang-img-right {
  width: 1rem;
  height: 1rem;
  margin-left: 0.5rem;
  opacity: 0.8;
}

.header-text {
  /* background-color: lightpink; */
  line-height: 1.8rem;
  margin-top: 1.5rem;
}

.text-greet {
  font-size: 1.3rem;
}

.text-tips {
  font-size: 0.8rem;
}
/* 头部样式 */


.select-labels {
  /* background-color: cadetblue; */
  margin: 0 auto;
  overflow: hidden;
  display: flex;
  align-items: center;
}

.labels-container {
  position: relative;
  height: 4rem;
  /* background-color: pink; */
  white-space: nowrap;
}

.label {
  margin-top: 0.5rem;
  display: inline-flex;
  width: 6.5rem;
  height: 3rem;
  background-color: #ffffff;
  border-radius:0.9rem;
  align-items: center;
  /* box-shadow: 0.02px 0.02px 0.01px #c8c3c3,
              -0.02px -0.02px 0.01px #c8c3c3; */
  box-shadow: 1px 1px 1px #f4f5f6,
              -1px -1px 1px #f4f5f6;
}

.label-style {
  margin-left: 1rem;
}

.label-img-continer {
  width: 2.5rem;
  height: 2.5rem;
  background-color: #ECF0F4;
  border-radius: 0.8rem;
  margin-left: 0.3rem;
  display: flex;
  align-items: center;
}

.label-img {
  width: 2.2rem;
  height: 2.2rem;
  margin: 0 auto;
}

.label-text {
  font-size: 0.8rem;
  margin-left: 0.8rem;
}
/* 功能样式 */


.popular-text {
  margin: 0 auto;
  font-size: 1.2rem;
}

.hot-places {
  /* background-color: pink; */
  margin: 0 auto;
  overflow: hidden;
  margin-top: 1rem;
}

.places-container {
  /* background-color: blanchedalmond; */
  height: inherit;
  white-space: nowrap;
  position: relative;
}

.places-card-container {
  margin-top: 0.5rem;
  width: 12rem;
  height: 13rem;
  display: inline-flex;
  border-radius: 1rem;
  background-color: #ffffff;
  position: relative;
  align-items: center;
  box-shadow: 2px 2px 3px #f4f5f6,
              -2px -2px 3px #f4f5f6;
}

.places-card {
  /* background-color: lightcoral; */
  width: 11.4rem;
  height: 12.35rem;
  /* display: grid;
  column-count: 1;
  grid-template-rows: 2.5fr 1fr; */
  margin: 0 auto;
  overflow: hidden;
}

.places-card-style {
    margin-left: 1rem;
}

.places-img {
  width: inherit;
  height: 10rem;
  /* background-color: pink; */
  border-radius: 1rem;
  overflow: hidden;
}

.places-info {
  /* background-color: bisque; */
  width: inherit;
  height: 3rem;
}

.place-name, .place-loc {
  display: block;
}

.place-name {
  font-size: 0.9rem;
}

.place-loc {
  font-size: 0.8rem;
}
/* 热门景点样式 */


.explore {
  min-height: 5rem;
  position: relative;
  margin: 0 auto;
  /* background-color: powderblue; */
  margin-top: 2rem; 
}

.explore-text {
  /* background-color: pink; */
  font-size: 1.2rem;
}

.explore-scroll {
  margin-top: 1rem;
  width: inherit;
  min-height: 3rem;
  /* background-color: rebeccapurple; */
  white-space: nowrap;
}

.explore-container {
  width: 3.5rem;
  min-height: 3.5rem;
  /* background-color: ivory; */
  border-radius: 100%;
  text-align: center;
  display: inline-block;
}

.explore-container-style {
  margin-left: 2rem;
}

.explore-img-container {
  overflow: hidden;
  margin: 0 auto;
  display: flex;
  align-items: 0 auto;
}

.explore-img {
  width: 3.5rem;
  height: 3.5rem;
  border-radius: 100%;
  box-shadow: 1.5px 1.5px 2px #f4f5f6,
              -1.5px -1.5px 2px #f4f5f6;
}

