/* pages/ar/ar.wxss */

.header-container {
  height: 3rem;
  /* background-color: pink; */
  margin: 0 auto;
  text-align: center;
  position: relative;
  display: flex;
  align-items: center;
}

.back-container {
  width: 3rem;
  height: inherit;
  /* background-color: plum; */
  position: absolute;
  display: flex;
  align-items: center;
}

.back-icon {
  margin: 0 auto;
  font-size: 1.5rem;
  font-weight: 200;
}

.head-text {
  margin: 0 auto;
  font-size: 1.2rem;
}
/* 顶部样式 */

.place-list {
  width: 90vw;
  min-height: 3rem;
  /* background-color: pink; */
  margin: 0 auto;
  position: relative;
  margin-top: 3rem;
}

.list-style {
  display: block;
  margin-top: 1rem;
  /* background-color: #f5f5f5 !important; */
  /* box-shadow: 2px 2px 2px #f4f5f6,
              -2px -2px 2px #f4f5f6; */
  font-weight: 600;
}

.footer-placeholder {
  margin-top: 2rem;
  height: 3rem;
  display: block;
  text-align: center;
  opacity: 40%;
  font-weight: 800;
  font-size: 0.9rem;
}